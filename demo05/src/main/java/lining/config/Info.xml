<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="lining.mapper.InfoMapper">
	<select id="queryInfos" resultType="lining.bean.Info">
		select * from `info`
    </select>
     
    <select id="queryInfo" parameterType="int" resultType="lining.bean.Info">
		select * from `info` where id = #{id}
    </select>
    
    <insert id="insertInfo">
	  insert into info (name,intro)
	  values (#{name},#{intro})
	</insert>
	
	<update id="updateInfo">
	  update info set
	    name = #{name},
	    intro = #{intro}
	  where id = #{id}
	</update>

	<delete id="deleteInfo">
	  delete from info where id = #{id}
	</delete>
</mapper>
